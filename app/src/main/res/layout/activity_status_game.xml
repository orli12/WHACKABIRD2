<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game"

    tools:context=".StatusGame">

    <TextView
        android:id="@+id/the_name"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|top"
        android:text="text massage "
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="228dp"
        android:layout_marginRight="228dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/new_game" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/exit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="37dp" />

    <Button
        android:id="@+id/btn_record_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/the_name"
        android:text="Record table" />

</RelativeLayout>